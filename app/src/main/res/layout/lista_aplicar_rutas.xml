<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imagen_modelo_carro"
                android:layout_width="110dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/referencia_carro1"
                android:paddingLeft="14dp"
                android:paddingRight="14dp" />
            <LinearLayout
                android:id="@+id/linearLayout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imagen_modelo_carro"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/imagen_modelo_carro"
                >
                    <TextView
                        android:id="@+id/dia_aplicar_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Dia"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/conductor_aplicar_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conductor"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/hora_salida_aplicar_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hora salida"
                        android:textColor="@color/black"
                        android:textSize="12dp"/>
                    <TextView
                        android:id="@+id/tarifa_aplicar_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tarifa"
                        android:textColor="@color/black"
                        android:textSize="12dp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ver_detalles_aplicar_ruta"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/ic_flecha_derecha"
                android:layout_alignParentRight="true"
                />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignEnd="@+id/ver_detalles_aplicar_ruta"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/ver_detalles_aplicar_ruta"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>