<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"

    >

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:text="@string/menu_nuevaRuta"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="129dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="52dp"
        android:background="@mipmap/casa_unal_principal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="129dp"
        android:layout_height="73dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="44dp"
        android:background="@mipmap/unal_casa_principal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3" />
<LinearLayout
    android:id="@+id/linearLayoutRVaplicarRuta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignTop="@+id/spinner"
    android:layout_marginRight="5dp"
    android:layout_marginTop="300dp"

    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAplicarRutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>